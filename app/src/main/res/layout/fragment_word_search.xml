<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="Hello"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:gravity=""
            android:id="@+id/txtWordSearch"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/volume_icon"
            android:gravity="center"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/btnVolume"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/baseline_add_circle_24"
            android:gravity="center"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/btnAddWord"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xin chào"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:id="@+id/txtPronucSearch"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xin chào"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:id="@+id/txtMean"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/image_word"
        android:id="@+id/imgSearch"/>
    

</LinearLayout>