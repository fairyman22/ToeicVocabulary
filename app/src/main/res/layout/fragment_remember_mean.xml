<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/currentCount"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/currentCount"
            android:text="|"
            android:gravity="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/totalCount"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"

            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/btnClose"
            android:gravity="center"
            android:text="1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_close_"
            android:gravity="center" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView

            android:layout_width="100dp"
            android:layout_height="50dp"

            android:drawableTop="@drawable/ic_wrong"
            android:gravity="center"
            android:paddingTop="15dp"

            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtWrong"
            android:layout_width="70dp"
            android:layout_height="50dp"

            android:gravity="center"
            android:text="12"
            android:textSize="25dp" />

        <TextView

            android:layout_width="100dp"
            android:layout_height="50dp"

            android:drawableTop="@drawable/ic_check"
            android:gravity="center"
            android:paddingTop="15dp"

            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/correct"
            android:layout_width="70dp"
            android:layout_height="50dp"


            android:gravity="center"
            android:text="12"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/volume_icon"
            android:paddingTop="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/btnVolumegame"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="30dp"
            android:id="@+id/txtWordgame"/>
    </LinearLayout>
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:rowOrderPreserved="false">

        <!-- Ô 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"

            android:id="@+id/a">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text 2"
                    android:textSize="18sp"
                    android:id="@+id/daa"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ô 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:id="@+id/b">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text 2"
                    android:textSize="18sp"
                    android:id="@+id/dab"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ô 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"

            android:id="@+id/c">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text 2"
                    android:textSize="18sp"
                    android:id="@+id/dac"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ô 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:id="@+id/d">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text 2"
                    android:textSize="18sp"
                    android:id="@+id/dad"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Check"
        android:textSize="20dp"
        android:id="@+id/btnCheck"/>



</LinearLayout>